<?xml version="1.0"?>
<config>
    <modules>
        <Quarticon_Quartic>
            <version>1.2.3.2</version>
        </Quarticon_Quartic>
    </modules>
    <global>
        <blocks>
            <quartic>
                <class>Quarticon_Quartic_Block</class>
            </quartic>
        </blocks>
        <models>
            <quartic>
                <class>Quarticon_Quartic_Model</class>
                <resourceModel>quartic_mysql4</resourceModel>
            </quartic>
            <quartic_mysql4>
                <class>Quarticon_Quartic_Model_Mysql4</class>
                <entities>
                    <placement>
                        <table>quartic_placements</table>
                    </placement>
                    <history>
                        <table>quartic_history</table>
                    </history>
                    <maps>
                        <table>quartic_maps</table>
                    </maps>
                </entities>
            </quartic_mysql4>
        </models>
        <resources>
            <quartic_setup>
                <setup>
                    <module>Quarticon_Quartic</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </quartic_setup>
            <quartic_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </quartic_write>
            <quartic_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </quartic_read>
        </resources>
        <helpers>
            <quartic>
                <class>Quarticon_Quartic_Helper</class>
            </quartic>
        </helpers>
    </global>
    <frontend>
        <routers>
            <quartic>
                <use>standard</use>
                <args>
                    <module>Quarticon_Quartic</module>
                    <frontName>quartic</frontName>
                </args>
            </quartic>
        </routers>
        <layout>
            <updates>
                <quartic>
                    <file>quartic.xml</file>
                </quartic>
            </updates>
        </layout>
        <translate>
            <modules>
                <Quarticon_Quartic>
                    <files>
                        <default>Quarticon_Quartic.csv</default>
                    </files>
                </Quarticon_Quartic>
            </modules>
        </translate>        
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <quartic>
                        <type>singleton</type>
                        <class>quartic/observer_frontend</class>
                        <method>blockAbstractToHtmlAfter</method>
                    </quartic>
                </observers>
            </core_block_abstract_to_html_after>
            <controller_front_send_response_before>
                <observers>
                    <quartic_controller_front_send_response_before>
                        <type>singleton</type>
                        <class>quartic/observer_frontend</class>
                        <method>controllerFrontSendResponseBefore</method>
                    </quartic_controller_front_send_response_before>
                </observers>
            </controller_front_send_response_before>
        </events>
    </frontend>  
    <default>
        <quartic>
            <config>
                <active>0</active>
                <use_sku>1</use_sku>
                <add_thumbs>0</add_thumbs>
                <only_in_stock>0</only_in_stock>
                <show_disabled_products>1</show_disabled_products>
                <category_use_product_frame>0</category_use_product_frame>
                <min_qty>0</min_qty>
                <visibility>4</visibility>
                <configurable_price>0</configurable_price>
                <feed>
                    <product>
                        <iteration_step>250</iteration_step>
                        <use_file_cache>0</use_file_cache>
                    </product>
                </feed>
            </config>
            <composite>
                <configurable_childs>1</configurable_childs>
                <configurable_child_image>0</configurable_child_image>
                <configurable_child_price>1</configurable_child_price>
                <grouped_child_image>0</grouped_child_image>
                <grouped_child_price>0</grouped_child_price>
            </composite>
        </quartic>
    </default>
    <adminhtml>
        <events>
            <admin_system_config_changed_section_quartic>
                <observers>
                    <quartic>
                        <type>singleton</type>
                        <class>quartic/observer_adminhtml</class>
                        <method>handle_adminSystemConfigChangedSection</method>
                    </quartic>
                </observers>
            </admin_system_config_changed_section_quartic>
        </events>
        <translate>
            <modules>
                <Quarticon_Quartic>
                    <files>
                        <default>Quarticon_Quartic.csv</default>
                    </files>
                </Quarticon_Quartic>
            </modules>
        </translate>
        <acl>
            <resources>
                <!--<all>
                    <title>Allow Everything</title>
                </all>-->
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <quartic>
                                            <title>QUARTICON | Quartic</title>
                                        </quartic>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <quartic>
                    <file>quartic.xml</file>
                </quartic>
            </updates>
        </layout>
    </adminhtml>
    <crontab>
        <jobs>
            <quartic>
                <schedule>
                    <cron_expr>2 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>quartic/cron::refreshProductsFeed</model>
                </run>
            </quartic>
        </jobs>
    </crontab>
    <admin>
        <routers>
            <quartic>
                <use>admin</use>
                <args>
                    <module>Quarticon_Quartic</module>
                    <frontName>quartic</frontName>
                </args>
            </quartic>
        </routers>
    </admin>
</config>
